---
import PostTagList from "./PostTagList.astro";
const {post, frontmatter} = Astro.props;
import { createExcerpt } from '../utils/create-excerpt.ts';
import PostByline from "@components/PostByline.astro";
const excerpt = createExcerpt(post.rendered.html);
---
<div class="rounded-md border-1 border-gray-200 bg-white p-3 m-5 shadow">
    <h2><a href=`/posts/${post.id}/`>{frontmatter.title}</a></h2>
    <PostTagList tags={frontmatter.tags} />
    <PostByline frontmatter={frontmatter} />
    <div class="text-[1.25em]">{excerpt}</div>
</div>
