---
// Credit: https://www.cyishere.dev/blog/astro-active-nav-item
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.split("/")[1];
---
<div class="flex justify-evenly rounded-sm nav-links">
    <a href="/" class={`rounded-full ${currentPath == '' ? 'active' : ''}` }>Home</a>
    <a href="/about/" class={`rounded-full ${currentPath == 'about' ? 'active' : ''}`}>About</a>
    <a href="/posts/1" class={`rounded-full ${['posts', 'tags'].includes(currentPath) ? 'active' : ''}`}>Blog</a>
    <a href="/micros/" class={`rounded-full ${['micros'].includes(currentPath) ? 'active' : ''}`}>Micros</a>
    <a href="/reading/" class={`rounded-full ${['reading'].includes(currentPath) ? 'active' : ''}`}>Reading</a>
    <a href="/writing/" class={`rounded-full ${['writing'].includes(currentPath) ? 'active' : ''}`}>Writing</a>
    <a href="/etc/" class={`rounded-full ${['etc'].includes(currentPath) ? 'active' : ''}`}>Etc.</a>
</div>
